<%= form_with model: @restaurant, local: true do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div class="actions">
    <%= f.submit "Create Restaurant", class: "btn btn-outline-secondary btn-sm"%>
  </div>
<% end %>
