<% if @restaurant.errors.any? %>
        <h5 class="error"><%= @restaurant.errors.full_messages.to_sentence %></h5>
<% end %>

<%= form_with model: @restaurant, local: true do |f| %>
    <%= f.label :name, "Name:" %>
    <%= f.text_field :name, class: @restaurant.errors.any? ? "error-field" : nil %>

    <%= f.label :location, "City:" %>
    <%= f.text_field :location %>

    <%= f.submit class: "btn btn-outline-secondary btn-sm" %>
<%end %>

